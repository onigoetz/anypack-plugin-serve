{
  "name": "webpack-plugin-serve",
  "version": "1.6.0",
  "description": "A Development Server in a Webpack Plugin",
  "license": "MPL-2.0",
  "repository": "onigoetz/anypack-plugin-serve",
  "author": "shellscape",
  "homepage": "https://github.com/shellscape/webpack-plugin-serve",
  "bugs": "https://github.com/shellscape/webpack-plugin-serve/issues",
  "bin": "",
  "main": "lib/index.js",
  "engines": {
    "node": ">= 20.0.0"
  },
  "scripts": {
    "ci:lint": "biome check lib test",
    "ci:test": "npm run test --coverage",
    "dev": "npm run dev:clean && node node_modules/webpack-nano/bin/wp --config test/fixtures/simple/webpack.config.js",
    "dev:clean": "del test/fixtures/multi/output/* test/fixtures/simple/output/*",
    "dev:multi": "npm run dev:clean && node node_modules/webpack-nano/bin/wp --config test/fixtures/multi/webpack.config.js",
    "faq:toc": "echo 'temporarily disabled' # markdown-toc -i .github/FAQ.md",
    "format": "biome format lib test",
    "lint": "biome check --write lib test",
    "lint-staged": "lint-staged",
    "test": "rstest"
  },
  "files": [
    "client.js",
    "lib/",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "webpack": "^5.0.0"
  },
  "dependencies": {
    "ansi-colors": "^4.1.3",
    "connect-history-api-fallback": "^2.0.0",
    "empathic": "^2.0.0",
    "http-proxy-middleware": "^1.0.3",
    "json-stringify-safe": "^5.0.1",
    "koa": "^2.5.3",
    "koa-compress": "^5.0.1",
    "koa-connect": "^2.0.1",
    "koa-route": "^3.2.0",
    "koa-static": "^5.0.0",
    "loglevelnext": "^4.0.1",
    "nanoid": "^5.1.6",
    "onetime": "^7.0.0",
    "open": "^11.0.0",
    "superstruct": "^2.0.2",
    "tinyglobby": "^0.2.15",
    "webpack-plugin-ramdisk": "^0.2.0",
    "ws": "^7.5.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@rstest/core": "^0.7.0",
    "@rstest/coverage-istanbul": "^0.1.0",
    "del-cli": "7.0.0",
    "execa": "^9.0.0",
    "get-port": "^7.1.0",
    "line-by-line": "^0.1.6",
    "lint-staged": "^16.2.7",
    "node-fetch": "^3.3.2",
    "pre-commit": "^1.2.2",
    "puppeteer": "^24.32.0",
    "random-js": "^2.1.0",
    "webpack": "^5.0.0",
    "webpack-nano": "^1.0.0"
  },
  "keywords": [
    "dev",
    "development",
    "devserver",
    "serve",
    "server",
    "webpack"
  ],
  "lint-staged": {
    "*.{js,mjs}": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true --colors=off"
    ]
  },
  "nyc": {
    "include": [
      "lib/**/*.js"
    ],
    "exclude": [
      "lib/client*.js",
      "test/"
    ]
  },
  "pre-commit": "lint-staged"
}
